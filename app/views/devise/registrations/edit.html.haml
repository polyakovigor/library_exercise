.row
  .col-xs-10.col-sm-9.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-7
    .login-box
      .logo
        %h2 Edit profile
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        .form-box
          = render 'shared/error_messages'
          .field
            = f.label :first_name
            = f.text_field :first_name
          .field
            = f.label :last_name
            = f.text_field :last_name
          .field
            = f.label :email
            = f.email_field :email
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .field
            = f.label :password
            %em (leave blank if you don't want to change it)
            = f.password_field :password, autocomplete: 'off'
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
          .field
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: 'off'
          .field
            = f.label :current_password
            %i (we need your current password to confirm your changes)
            = f.password_field :current_password, autocomplete: 'off'
        .actions
          = f.submit 'Update', class: 'btn btn-lg btn-default'
        .login-links
          = link_to 'Back', :back
        .cancel
          %h3 Cancel my account
          = link_to registration_path(resource_name), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete account', class: 'btn btn-lg btn-danger' do
            %span.glyphicon.glyphicon-trash{ aria: { hidden: true } }
