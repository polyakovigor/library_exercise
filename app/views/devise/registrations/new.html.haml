.row
  .col-xs-8.col-xs-offset-2.col-md-6.col-md-offset-3
    .login-box
      .logo
        %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-box
          - if resource.errors.any?
            #error_explanation
              %ul.alert.alert-danger.alert-dismissable
                %a.close{ aria: { label: 'close' }, data: { dismiss: 'alert' }, href: '#' } Ã—
                - resource.errors.full_messages.each do |message|
                  %li= message
          .field
            = f.label :first_name
            %br/
            = f.text_field :first_name, placeholder: 'my first name...'
          .field
            = f.label :last_name
            %br/
            = f.text_field :last_name, placeholder: 'my last name...'
          .field
            = f.label :email
            %br/
            = f.email_field :email, placeholder: 'myemail@example.com'
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: 'off', placeholder: '**********'
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: 'off', placeholder: '**********'
        .actions
          = f.submit 'Sign up', class: 'btn btn-lg btn-default'
        = render 'devise/shared/links'

