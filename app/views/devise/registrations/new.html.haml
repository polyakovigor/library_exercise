.row
  .col-xs-10.col-sm-9.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-7
    .login-box
      .logo
        %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .sub-login-box
          = render 'shared/error_messages'
          .field
            = f.label :first_name
            = f.text_field :first_name, placeholder: 'my first name...'
          .field
            = f.label :last_name
            = f.text_field :last_name, placeholder: 'my last name...'
          .field
            = f.label :email
            = f.email_field :email, placeholder: 'myemail@example.com'
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: 'off', placeholder: '**********'
          .field
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: 'off', placeholder: '**********'
        .actions
          = f.submit 'Sign up', class: 'btn btn-lg btn-default'
        = render 'devise/shared/links'

