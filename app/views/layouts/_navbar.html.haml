%nav.navbar.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle{ data: { target: '#myNavbar', toggle: 'collapse' }, type: 'button' }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'navbar-brand' do
        LIBRARY
        %span.glyphicon.glyphicon-book{ aria: { hidden: true } }
    #myNavbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to 'New Book', new_book_path
        %li
          = link_to 'About', '#'
        %li
          = link_to 'Contact', '#'
      %ul.nav.navbar-nav.navbar-form
        = form_tag books_path, method: :get do
          .input-group
            = text_field_tag :search, params[:search], placeholder: 'What book are you looking for?', class: 'form-control'
            .input-group-btn
              = button_tag type: 'submit', class: 'btn btn-default' do
                %i.glyphicon.glyphicon-search
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ aria: { expanded: 'true', haspopup: 'true' }, data: { toggle: 'dropdown' }, href: '#', role: 'button'}
              %img{:alt => "Gravatar", :height => "24", :src => "https://secure.gravatar.com/avatar/3db5cafc0f8cb4cd74a9b28f8e1b9654.png?default=mm&filetype=png&secure=true&size=24", :width => "24"}
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to edit_user_registration_path, title: current_user.email do
                  Account Settings
                  %span.glyphicon.glyphicon-cog.logo-small
              %li
                = link_to '#' do
                  View Profile
                  %span.glyphicon.glyphicon-user.logo-small
              %li.divider{ role: 'separator'}
              %li
                = link_to destroy_user_session_path, method: :delete do
                  Logout
                  %span.glyphicon.glyphicon-log-out.logo-small{ aria: { hidden: true } }
        - else
          %li
            = link_to new_user_registration_path do
              Sign Up
              %span.glyphicon.glyphicon-user.logo-small{ aria: { hidden: true } }
          %li
            = link_to new_user_session_path do
              Sign In
              %span.glyphicon.glyphicon-log-in.logo-small{ aria: { hidden: true } }
