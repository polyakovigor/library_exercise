%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle{ data: { target: '#myNavbar', toggle: 'collapse' }, type: 'button' }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand
        = link_to root_path do
          Library
          %span.glyphicon.glyphicon-book{ aria: { hidden: true } }
    #myNavbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          = link_to 'Home', '#'
        %li.dropdown
          %a.dropdown-toggle{ data: { toggle: 'dropdown' }, href: '#' }
            Page 1
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "#"} Page 1-1
            %li
              %a{:href => "#"} Page 1-2
            %li
              %a{:href => "#"} Page 1-3
        %li
          %a{:href => "#"} Page 2
        %li
          = link_to 'New Book', new_book_path
      %form.navbar-form.navbar-right
        .input-group
          %input.form-control{:placeholder => "Search", :type => "text"}/
          .input-group-btn
            %button.btn.btn-default{:type => "submit"}
              %i.glyphicon.glyphicon-search
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to current_user.email, edit_user_registration_path
          %li
            = link_to destroy_user_session_path, method: :delete do
              Logout
              %span.glyphicon.glyphicon-log-out{ aria: { hidden: true } }
        - else
          %li
            = link_to new_user_registration_path do
              Sign Up
              %span.glyphicon.glyphicon-user{ aria: { hidden: true } }
          %li
            = link_to new_user_session_path do
              Sign In
              %span.glyphicon.glyphicon-log-in{ aria: { hidden: true } }