#myCarousel.carousel.slide{ data: { ride: 'carousel' } }
  %ol.carousel-indicators
    %li.active{ data: { 'slide-to' => 0, target: '#myCarousel' } }
    %li{ data: { 'slide-to' => 1, target: '#myCarousel' } }
    %li{ data: { 'slide-to' => 2, target: '#myCarousel' } }
    %li{ data: { 'slide-to' => 3, target: '#myCarousel' } }
    %li{ data: { 'slide-to' => 4, target: '#myCarousel' } }
  .carousel-inner
    .item.active
      = image_tag 'https://placehold.it/1200x400?text=BOOK'
      .carousel-caption
        %h3 Book #1
    .item
      = image_tag 'https://placehold.it/1200x400?text=BOOK'
      .carousel-caption
        %h3 Book #2
    .item
      = image_tag 'https://placehold.it/1200x400?text=BOOK'
      .carousel-caption
        %h3 Book #3
    .item
      = image_tag 'https://placehold.it/1200x400?text=BOOK'
      .carousel-caption
        %h3 Book #4
    .item
      = image_tag 'https://placehold.it/1200x400?text=BOOK'
      .carousel-caption
        %h3 Book #5
  %a.left.carousel-control{ data: { slide: 'prev' }, href: '#myCarousel' }
    %span.glyphicon.glyphicon-chevron-left
    %span.sr-only Previous
  %a.right.carousel-control{ data: { slide: 'next' }, href: '#myCarousel' }
    %span.glyphicon.glyphicon-chevron-right
    %span.sr-only Next

.container-fluid
  .row
    - @books.each do |book|
      .col-xs-12.col-sm-6.col-md-6.col-lg-3
        .panel.panel-info
          .panel-heading
            = book.name
          .panel-body
            = link_to (image_tag 'https://placehold.it/150x80?text=BOOK COVER', title: book.name, class: 'img-responsive'), book
          .panel-footer
            %p Book Author
            %p
              = link_to 'Edit', edit_book_path(book)
            %p
              = link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
  = paginate @books if present?